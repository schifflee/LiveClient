<Window x:Class="LiveClientDesktop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Title="自动登录" Height="100" Width="100">
    <Grid>
        <Border Background="Aqua" CornerRadius="15">
            <ProgressBar Grid.Row="0" Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Width="50" Height="50" Foreground="White"/>
        </Border>
    </Grid>
</Window>
