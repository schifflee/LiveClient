<UserControl x:Class="LiveClientDesktop.Views.RecordingTimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="4" Text="Rec:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="5" Text="{Binding RecTime}"   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
