<UserControl x:Class="PowerCreator.LiveClient.Desktop.Views.MicrophoneVolumeControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:customControls="clr-namespace:PowerCreator.LiveClient.Desktop.Controls"
              Height="Auto" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <customControls:FButton Grid.Column="0" FIcon="&#xe61f;" Style="{StaticResource FButton_Transparency}"></customControls:FButton>
        <Slider Grid.Column="1" TickFrequency="5" Orientation="Horizontal" VerticalAlignment="Center" Minimum="1" Maximum="100" Foreground="White" />
    </Grid>
</UserControl>
